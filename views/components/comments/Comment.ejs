<div class="flex flex-none items-start gap-x-3 bg-[#f2f4f5] p-3 rounded-lg">
	<img
		src="/images/posts/profile-post1.svg"
		alt="user img"
		class="object-cover object-center rounded-lg w-9 h-9"
	/>
	<div class="flex flex-col flex-1">
		<h5 class="text-xs font-bold text-dark-hard lg:text-sm">Zouhair Elyazji</h5>
		<span class="text-xs text-dark-light"
			><%= new Date("2023-10-28T15:35:53.607+0000").toLocaleDateString("en-US", { day: "numeric",
			month: "short", year: "numeric", hour: "2-digit",}) %>
		</span>
		<p class="font-opensans mt-[10px] text-dark-light">it was a nice post, Thank you!</p>
		<div class="flex items-center my-3 text-sm gap-x-3 text-dark-light font-roboto">
			<button class="flex items-center space-x-2">
				<i class="h-auto text-base ri-chat-4-line"></i>
				<span>Replay</span>
			</button>
			<button class="flex items-center space-x-2">
				<i class="h-auto text-base ri-pencil-fill"></i>
				<span>Edit</span>
			</button>
			<button class="flex items-center space-x-2">
				<i class="h-auto text-base ri-delete-bin-7-line"></i>
				<span>Delete</span>
			</button>
		</div>
	</div>
</div>

