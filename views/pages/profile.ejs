<%- include("../components/loggedHeader"); %>
<section
	class="relative z-40 grid w-full min-w-full min-h-full grid-cols-9 gap-2 pt-24 lg:max-w-full lg:mx-auto lg:px-20 xl:px-32"
>
	<div
		class="container relative z-10 col-span-9 px-4 pb-24 mx-auto mt-5 lg:border lg:border-slate-200 lg:rounded-lg"
	>
		<div class="grid">
			<div>
				<div class="flex flex-row flex-wrap items-start w-full py-5 mt-6 mb-4 gap-x-5 md:gap-x-0">
					<a
						href="/my-profile"
						class="relative block w-24 h-24 mb-5 overflow-hidden rounded-full bg-slate-400 md:mb-0 lg:w-32 lg:h-32"
					>
						<img
							src="<%= user.avatar %>"
							class="block w-full h-full rounded-full"
							alt="user image"
							loading="lazy"
						/>
					</a>
					<div class="flex flex-col items-start md:flex-1 md:pl-5 lg:pl-8">
						<div class="flex flex-row flex-wrap items-start justify-between w-full">
							<div class="w-full pr-5 mb-5 md:mb-0 md:flex-1">
								<div class="flex flex-row items-center">
									<h1 class="text-3xl font-bold leading-9 text-">
										<a href="/my-profile">
											<span><%= user.username%></span>
										</a>
									</h1>
								</div>
								<p class="mt-3 text-lg leading-5 text-slate-700">I am a full stack developer</p>
							</div>
							<div class="flex flex-row-reverse md:flex-row">
								<div class="ml-2 md:ml-0 md:mr-3" title="Share">
									<details class="dropdown details">
										<summary
											class="inline-flex items-center justify-center gap-2 px-[0.7rem] py-1 text-[22px] border rounded-full border-slate-200 hover:bg-slate-200 focus:outline-none focus:ring-offset-white text-slate-500 font-normal transition-all duration-150 bg-transparent outline-none btn summary"
										>
											<i class="block ri-share-box-line"></i>
										</summary>
										<ul class="z-[1] w-40 p-2 rounded shadow menu bg-base-100 dropdown-content">
											<li>
												<a
													class="flex items-center w-full text-slate-900"
													href="https://twitter.com/intent/tweet?text=Check <%= user.username %> profile on https://hashnode.com/@ZouhairElyazji"
												>
													<span>
														<i class="text-xl ri-twitter-x-line"></i>
													</span>
													<span class="text-lg font-medium">Twitter</span>
												</a>
											</li>
											<li>
												<a
													href="https://www.linkedin.com/sharing/share-offsite/?url=https://hashnode.com/@ZouhairElyazji"
												>
													<span>
														<i class="text-2xl ri-linkedin-box-fill"></i>
													</span>
													<span class="text-lg font-medium">Linkedin</span>
												</a>
											</li>
										</ul>
									</details>
								</div>
								<a
									href="/settings"
									class="flex flex-row items-center justify-center px-5 py-2 leading-7 text-center text-white transition-all duration-150 border border-blue-600 rounded-full bg-primary hover:shadow-lg hover:bg-primary/90"
								>
									<i class="mr-2 text-lg ri-pencil-line"></i>
									<span>Edit</span>
								</a>
							</div>
						</div>

						<div class="flex flex-wrap items-center mt-5 md:justify-center">
							<a href="#" class="mr-5 leading-8 text-slate-900">
								<span class="font-bold">35</span>
								Following
							</a>
						</div>
					</div>
				</div>
			</div>
			<div
				class="flex flex-col flex-wrap items-start px-2 py-5 mb-5 border rounded-lg border-slate-200 text-slate-500 md:flex-row md:items-center md:justify-center"
			>
				<div class="flex flex-row flex-wrap items-center w-full mx-2 mb-2 md:justify-center"></div>
				<div class="flex flex-row items-center mx-4 mb-4 md:mb-0">
					<i class="mr-2 ri-calendar-2-line"></i>
					<span class="">Member Since sep, 2023</span>
				</div>
			</div>
		</div>

		<div class="grid grid-cols-9 mb-5">
			<div class="grid grid-cols-6 col-span-9 gap-5">
				<div
					class="col-span-6 min-h-[30vh] border border-slate-200 rounded-lg p-5 md:px-10 lg:col-span-2"
				>
					<h2 class="mb-5 text-xl font-bold leading-7 text-slate-900">About me</h2>
					<div class="max-w-[65ch] text-slate-600 text-base leading-7 break-normal">
						<p>I am a Full-stack developer lorem</p>
					</div>
				</div>

				<div
					class="col-span-6 min-h-[30vh] border border-slate-200 rounded-lg p-5 md:px-10 md:col-span-3 lg:col-span-2"
				>
					<h2 class="mb-5 text-xl font-bold leading-7 text-slate-900">My Tech Stack</h2>
					<div class="flex flex-row items-center">
						<a
							href="/settings#techstack"
							class="inline-flex items-center justify-center px-4 py-1 font-medium leading-6 text-center border rounded-full border-slate-200 text-align text-slate-700 outline-transparent hover:bg-slate-200"
						>
							<i class="mr-1 text-2xl ri-add-fill"></i>
							<span>Add your skills</span>
						</a>
					</div>
				</div>

				<div
					class="col-span-6 min-h-[30vh] border border-slate-200 rounded-lg p-5 md:px-10 md:col-span-3 lg:col-span-2"
				>
					<h2 class="mb-5 text-xl font-bold leading-7 text-slate-900">I am available for</h2>
					<div class="flex flex-row items-center">
						<a
							href="/settings#avalibleFor"
							class="inline-flex items-center justify-center px-4 py-1 font-medium leading-6 text-center border rounded-full border-slate-200 text-align text-slate-700 outline-transparent hover:bg-slate-200"
						>
							<i class="mr-1 text-2xl ri-add-fill"></i>
							<span>Add Available For</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="grid grid-cols-9 mb-20">
			<div class="col-span-9 p-5 border rounded-lg border-slate-200">
				<h2 class="mb-5 text-xl font-bold leading-7 text-slate-900">Recent Activity</h2>
				<div class="flex flex-row">
					<div
						class="flex flex-col items-center w-24 py-4 text-sm font-medium leading-5 text-slate-500"
					>
						<p>Sep 23</p>
					</div>
					<div class="flex-1 ml-4">
						<div class="py-4 border-b">
							<div
								class="flex flex-row items-center mb-1 text-sm font-medium leading-5 text-slate-500"
							>
								<span>Joined Zouhair Blog</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%- include("../components/loggedNav"); %> <%- include("../components/loggedFooter"); %>
