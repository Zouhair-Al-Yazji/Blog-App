<% if (user) { %> <%- include("../components/loggedHeader"); %> <% } else { %> <%-
include("../components/Header"); %> <% } %>

<section class="relative z-40 grid w-full min-w-full min-h-screen grid-cols-8 gap-8 pt-20">
	<div class="relative min-w-0 col-span-8 px-4 pt-8 pb-12">
		<div class="mx-auto max-w-[728px]">
			<div class="mt-2 mb-8">
				<form action="/search" method="POST" class="relative flex flex-row flex-wrap items-stretch">
					<span class="absolute z-30 flex items-center h-full p-4 text-dark-light">
						<i class="ri-search-line"></i>
					</span>
					<input
						type="search"
						name="query"
						placeholder="Start typing to search"
						required
						autocomplete="off"
						class="w-full px-10 py-3 placeholder-gray-400 bg-transparent border rounded-full border-slate-200 hover:border-slate-400 text-slate-600 outline-2 outline-transparent outline-offset-2 placeholder:font-normal focus:outline-none focus:border-primary"
						value="<%= locals.body %>"
					/>
				</form>
			</div>

			<div class="mb-8">
				<div class="pb-5 border-b border-slate-200">
					<nav class="flex gap-1 h-9" aria-label="Tabs" role="tablist">
						<button
							type="button"
							class="inline-flex items-center px-5 text-sm font-medium border-transparent rounded-full text-slate-600 hover:bg-slate-100 hs-tab-active:text-blue-600 hs-tab-active:bg-blue-50/80 whitespace-nowrap active"
							id="tabs-with-badges-item-1"
							data-hs-tab="#tabs-with-badges-1"
							aria-controls="tabs-with-badges-1"
							role="tab"
						>
							Top
						</button>

						<button
							type="button"
							class="inline-flex items-center px-5 text-sm font-medium border-transparent rounded-full text-slate-600 hover:bg-slate-100 hs-tab-active:text-blue-600 hs-tab-active:bg-blue-50/80 whitespace-nowrap"
							id="tabs-with-badges-item-2"
							data-hs-tab="#tabs-with-badges-2"
							aria-controls="tabs-with-badges-2"
							role="tab"
						>
							Latest
						</button>

						<button
							type="button"
							class="inline-flex items-center px-5 text-sm font-medium border-transparent rounded-full text-slate-600 hover:bg-slate-100 hs-tab-active:text-blue-600 hs-tab-active:bg-blue-50/80 whitespace-nowrap"
							id="tabs-with-badges-item-3"
							data-hs-tab="#tabs-with-badges-3"
							aria-controls="tabs-with-badges-3"
							role="tab"
						>
							Tags
						</button>

						<button
							type="button"
							class="inline-flex items-center px-5 text-sm font-medium border-transparent rounded-full text-slate-600 hover:bg-slate-100 hs-tab-active:text-blue-600 hs-tab-active:bg-blue-50/80 whitespace-nowrap"
							id="tabs-with-badges-item-4"
							data-hs-tab="#tabs-with-badges-4"
							aria-controls="tabs-with-badges-4"
							role="tab"
						>
							People
						</button>
					</nav>
				</div>

				<div class="mt-3">
					<div id="tabs-with-badges-1" role="tabpanel" aria-labelledby="tabs-with-badges-item-1">
						<div class="flex flex-col items-center h-full py-20 text-center">
							<p class="w-full mb-5 text-2xl font-medium leading-8 text-dark-light">
								Search for tags, people, articles, and more
							</p>
							<img
								src="/images/searchImg.png"
								alt="Search Image"
								loading="lazy"
								class="block max-w-[400px]"
							/>
						</div>
					</div>

					<div
						id="tabs-with-badges-2"
						class="hidden"
						role="tabpanel"
						aria-labelledby="tabs-with-badges-item-2"
					></div>

					<div
						id="tabs-with-badges-3"
						class="hidden"
						role="tabpanel"
						aria-labelledby="tabs-with-badges-item-3"
					></div>

					<div
						id="tabs-with-badges-4"
						class="hidden"
						role="tabpanel"
						aria-labelledby="tabs-with-badges-item-4"
					></div>
				</div>
			</div>
		</div>
	</div>
</section>

<% if (user) { %> <%- include("../components/loggedNav", {searchActive: '#1565D8'}); %> <% } %> <%
if (user) { %> <%- include("../components/loggedFooter"); %> <% } else { %> <%-
include("../components/Footer"); %> <% } %>
