<!-- Include Header -->
<%- include("../../components/Header"); %>

<section
	class="container flex flex-col px-4 py-32 mx-auto lg:max-w-5xl lg:flex-row lg:gap-x-10 lg:ml-10 lg:items-start"
>
	<article class="flex-1">
		<div class="mb-6 text-sm breadcrumbs">
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="/blog">Blog</a>
				</li>
				<li>
					<a href="/blog/1">Article Title</a>
				</li>
			</ul>
		</div>
		<img src="/images/post1s.svg" class="w-full rounded-xl" alt="Article Img" />
		<a
			href="/blog?category=selectedCategory"
			class="inline-block mt-5 text-sm text-primary font-roboto md:text-base"
		>
			EDUCATION
		</a>
		<h1 class="mt-4 text-xl font-medium font-roboto text-dark-hard md:text-2xl">
			<%= post.title %>
		</h1>
		<p class="text-sm text-dark-light">
			created on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDate() %>/<%=
			post.createdDate.getFullYear() %>.
		</p>
		<div class="mt-5 text-dark-soft">
			<p class="leading-7"><%= post.body %></p>
		</div>
		<!-- Include Comments Container -->
		<%- include("../../components/comments/CommentsContainer", {className: "mt-8"}); %>
	</article>
	<!-- Include SuggestedPosts -->
	<%- include("../ArticleDetailPage/container/SuggestedPosts", {header: "Latest Article"}) %>
	<div class="mt-7">
		<h2 class="mb-4 font-medium font-robot text-dark-hard md:text-xl">Share on:</h2>
		<%- include("../../components/SocialShareButtons"); %>
	</div>
</section>

<!-- Include Footer Section -->
<%- include("../../components/Footer") %>
