<%- include("../components/loggedHeader"); %>

<div class="m-5 text-2xl font-bold text-center text-gray-800 heading">Upload a Post</div>

<!-- ====== Contact Section Start -->
<section class="relative z-10 py-10 overflow-hidden bg-white">
	<div class="container max-w-2xl px-4 mx-auto">
		<div class="flex flex-wrap -mx-4">
			<div class="w-full px-4">
				<div class="relative p-8 bg-white rounded-lg shadow-lg sm:p-12">
					<form method="POST" action="/create-post" class="create-post-form">
						<div class="mb-6">
							<input
								type="text"
								name="title"
								required
								autocomplete="off"
								placeholder="Title"
								class="w-full px-4 py-3 text-gray-700 bg-white border border-gray-200 rounded-lg username inputToFocus focus:border-primary focus:outline-none focus:ring focus:ring-primary focus:ring-opacity-50"
							/>
						</div>
						<div class="mb-6">
							<input
								type="text"
								name="imgUrl"
								required
								autocomplete="off"
								placeholder="Banner image URL"
								class="w-full px-4 py-3 text-gray-700 bg-white border border-gray-200 rounded-lg img-url username inputToFocus focus:border-primary focus:outline-none focus:ring focus:ring-primary focus:ring-opacity-50"
							/>
						</div>
						<div class="mb-6">
							<input
								type="text"
								name="category"
								required
								autocomplete="off"
								placeholder="Category"
								class="w-full px-4 py-3 text-gray-700 bg-white border border-gray-200 rounded-lg username inputToFocus focus:border-primary focus:outline-none focus:ring focus:ring-primary focus:ring-opacity-50"
							/>
						</div>
						<div class="mb-6">
							<input
								type="number"
								min="1"
								name="readLength"
								required
								autocomplete="off"
								placeholder="Estimated Read Length (in minutes)"
								class="w-full px-4 py-3 text-gray-700 bg-white border border-gray-200 rounded-lg username inputToFocus focus:border-primary focus:outline-none focus:ring focus:ring-primary focus:ring-opacity-50"
							/>
						</div>
						<div class="mb-6">
							<textarea
								name="body"
								rows="10"
								required
								placeholder="Describe everything about this post here"
								class="w-full px-4 py-3 text-gray-700 bg-white border border-gray-200 rounded-lg resize-none username focus:border-primary focus:outline-none focus:ring focus:ring-primary focus:ring-opacity-50"
							></textarea>
						</div>
						<div>
							<button
								type="submit"
								class="w-full p-3 text-white transition border rounded bg-primary border-primary hover:bg-opacity-90"
							>
								Publish
							</button>
						</div>
					</form>
					<div>
						<span class="absolute -top-10 -right-9 z-[-1]">
							<img src="/images/quarter-circle.svg" alt="quarter-circle" />
						</span>
						<span class="absolute -right-10 top-[90px] z-[-1]">
							<img src="/images/dots.svg" alt="dots" />
						</span>
						<span class="absolute -left-7 -bottom-7 z-[-1]">
							<img src="/images/dots.svg" alt="dots" />
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%- include("../components/loggedFooter"); %>
